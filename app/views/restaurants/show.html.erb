<div class="row mt-3">
  <div class="col-12 row mb-3">
    <div class="col-3">
      <a href="<%= root_path %>" class="btn btn-info">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left"
          viewBox="0 0 16 16">
          <path fill-rule="evenodd"
            d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z">
          </path>
        </svg>
        retour
      </a>
    </div>
    <div class="col-6">
      <h1>
        <%= @restaurant.name %>
      </h1>
    </div>
    <div class="col-3">
      <button type="button" id="js_modal_button_show" class="js_modal_button_show btn btn-danger">Supprimer</button>
      <%= link_to "Modifier" , edit_restaurant_path(@restaurant), class: "btn btn-info" %>
    </div>
  </div>
  <div class="col-12 row ">
    <div class="col-6">
      <p>
        <%= @restaurant.description %>
      </p>
    </div>
    <div class="col-6">
      <img src="/images/restaurant.jpg" class="img-fluid" alt="image restaurant">
    </div>
  </div>
</div>
<div class="row mb-5">
  <h2>Commentaires</h2>
  <%= render @restaurant.comments %>
</div>
<% if current_user %>
  <div class="row bg-light mb-3">
    <h2>Ajouter un commentaire</h2>
    <%= render 'comments/form' %>
  </div>
<% end %>
<%= render "modal/delete_modal"%>
