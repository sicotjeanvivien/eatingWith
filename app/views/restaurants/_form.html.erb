<%= form_with  model: @restaurant do |form| %>
  <div class="mb-3">
    <%= form.label "nom du restautant" %><br>
    <%= form.text_field :name, class: "form-control"%>
    <% @restaurant.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= form.label :description %><br>
    <%= form.text_area :description, class: "form-control"%><br>
    <% @restaurant.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= form.label :ville %><br>
    <%= form.collection_select :city_id, City.order(:name), :id, :name, {}, {class:"form-select"} %>
    <% @restaurant.errors.full_messages_for(:city).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div class="row">
    <div class=" col-6 mb-3">
      <%= form.label "Latitude" %><br>
      <%= form.text_field :latitude, { value: "45", class: "form-control"}%>
      <% @restaurant.errors.full_messages_for(:latitude).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div class="col-6 mb-3">
      <%= form.label "Longitude" %><br>
      <%= form.text_field :longitude, { value: "-1.5", class: "form-control"}%>
      <% @restaurant.errors.full_messages_for(:longitude).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  </div>
  <%= form.submit "Ajouter un restaurant",  class: "btn btn-info" %>
<% end %>
