<%= form_with  model: @restaurant do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @restaurant.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% @restaurant.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :city %><br>
    <%= form.collection_select :city_id, City.order(:name), :id, :name %><br>
    <% @restaurant.errors.full_messages_for(:city).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
